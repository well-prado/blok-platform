{
  "name": "blok-platform",
  "version": "1.0.0",
  "description": "Trigger for HTTP requests",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "nanoctl dev",
    "start": "node dist/index.js",
    "reload": "node -r ts-node/register --env-file=.env.local ./src/index.ts",
    "build": "rimraf ./dist && tsc && copyfiles -u 1 src/nodes/**/*.html src/nodes/**/*.md dist/",
    "infra:dev": "rimraf ./dist && tsc && copyfiles -u 1 src/nodes/**/*.html src/nodes/**/*.md dist/ && docker compose --file ./infra/docker-compose.yml up --build --watch",
    "infra:build": "tsc --watch -p tsconfig.json --diagnostics",
    "docker:db": "docker compose -f infra/docker-compose.db.yml up -d",
    "docker:db:down": "docker compose -f infra/docker-compose.db.yml down",
    "docker:db:logs": "docker compose -f infra/docker-compose.db.yml logs -f",
    "docker:full": "docker compose -f infra/docker-compose.full.yml up -d",
    "docker:full:down": "docker compose -f infra/docker-compose.full.yml down",
    "docker:full:logs": "docker compose -f infra/docker-compose.full.yml logs -f",
    "docker:full:build": "docker compose -f infra/docker-compose.full.yml up --build -d",
    "docker:clean": "docker system prune -f && docker volume prune -f",
    "setup:db": "DB_HOST=localhost DB_PASSWORD=blok123 node setup-database.js",
    "test:auth": "node tests/auth.test.js",
    "test:simple": "node tests/simple-server.test.js"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.4",
    "@types/pg": "^8.11.11",
    "copyfiles": "^2.4.1",
    "nanoctl": "^0.1.14",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.2.0",
    "@nanoservice-ts/api-call": "^0.1.29",
    "@nanoservice-ts/helper": "^0.1.5",
    "@nanoservice-ts/if-else": "^0.0.30",
    "@nanoservice-ts/runner": "^0.1.26",
    "@nanoservice-ts/shared": "^0.0.9",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-prometheus": "^0.57.2",
    "@opentelemetry/resources": "^1.30.1",
    "@opentelemetry/sdk-metrics": "^1.30.1",
    "@opentelemetry/sdk-trace-base": "^1.30.1",
    "@opentelemetry/sdk-trace-web": "^1.30.1",
    "@opentelemetry/semantic-conventions": "^1.30.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "ai": "^4.1.50",
    "bcrypt": "^6.0.0",
    "body-parser": "1.20.3",
    "cors": "2.8.5",
    "ejs": "^3.1.10",
    "express": "4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.14.2",
    "pg": "^8.13.3",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "private": true
}